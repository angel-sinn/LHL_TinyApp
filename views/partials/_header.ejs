<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <class class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation"></class>
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!username) { %>
      <form method="POST" action="/login">
        <input type="text" name="username" placeholder="username" />
        <button type="submit" class="btn btn-outline-dark">Login</button>
        <% } else{ %>
          <div><span class="align-bottom">Logged In As: <%= username %>!</span></div>
          <form method="POST" action="/logout">
            <input type="submit" class="btn btn-outline-dark" value="Logout">
          </form>
          <% } %>
  </nav>
</header>